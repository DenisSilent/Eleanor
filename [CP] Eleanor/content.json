{
 // "$schema": "https://smapi.io/schemas/content-patcher.json", commented out because of formating problems after format 2.5.0

  "Format": "2.5.0",

  // NPC Eleanor - config.json file //

  // Config is also translatable with i18n, even though it doesn't look like
  "ConfigSchema": {
    // Optional content for Eleanor
    "Eleanor_festivals": {
      "AllowValues": "true, false",
      "Default": "true",
      "Section": "Optional content for Eleanor",
      "Description": "This setting activates Eleanor at some vanilla festivals. However, Eleanor don't have any festival clothes for now, so Eleanor'll use it's default. As of 0.6.8-beta.1 it includes unique non-marriage dialogues (year 1 only) for each festival she'll attend and one marriage dialogue. Default setting: true."
    },

    "Eleanor_marriage": {
      "AllowValues": "true, false",
      "Default": "false",
      "Section": "Optional content for Eleanor",
      "Description": "! PRE-ALPHA VERSION --> = U = N = U = S = A = B = L = E =  - WILL RESULT IN GAME (BREAKING?) ERRORS ! This setting lets you choose if Eleanor can be married. As of 0.6.8-beta.1 it should include A LOT of ERRORS! Default setting: false. = Turn on at your own risk! ="
    },

    "Eleanor_14hearts-variants": {
      "AllowValues": "short, long",
      "Default": "short", // short due to multiplayer support, I worry that long is too long for 1 SV multiplayer day
      "Section": "Optional content for Eleanor",
      "Description": "This setting lets you choose variant of Eleanor's 14hearts event. You can choose between short and long version, which contains of 5 automatically triggered events. = Short version has fully different outcome than the long one! = Default setting: long."
    },

    "Eleanor_14hearts-commented": {
      "AllowValues": "true, false",
      "Default": "false",
      "Section": "Optional content for Eleanor",
      "Description": "This setting lets you choose if Eleanor's 14hearts event will include comments or not. Default setting: false."
    },

    // Visual side of Eleanor

    "Eleanor_graphics": {
      "AllowValues": "one look only, vanilla, full",
      "Default": "one look only",
      "Section": "Visual side of Eleanor",
      "Description": "= ! EXPERIMENTAL - MIGHT (but shouldn't) RESULT IN NPC WITHOUT SPRITES OR PORTRAITS ! = This setting sets sprites & portraits for Eleanor.  As of 0.6.8-beta.1 it includes around 30%-done content. Default setting: only one look."
    },

    // Experimental - D O * N O T * C H A N G E
    "Eleanor_14-->10hearts change": {
      "AllowValues": "on, off",
      "Default": "on",
      "Section": "Experimental - DoNotChange",
      "Description": " = D O = N O T = U S E = For experimental usage only -> change at your own risk! = This setting changes Eleanor's 14 heart event to a 10 heart event. As of 0.6.8-beta.1 it *might* (needs better testing) be functional. If true, then the event that would be triggered when reaching 14 hearts with Eleanor will be triggered with only 10 hearts (so that it could even be triggerabe before marriage update; then this setting will be deleted) Default setting: true."
    },

    "Eleanor_on/off": {
      "AllowValues": "on, safe mode, off",
      "Default": "on",
      "Section": "Experimental - DoNotChange",
      "Description": " = D O = N O T = U S E = For experimental usage only -> change at your own risk! = This setting lets you choose if Eleanor will be added into game. As of 0.6.8-beta.1 it is functional. When set to safe mode, Eleanor will be put out of map but all progres with her will be kept. When off, Eleanor will be deleted from the game. Default setting: on."
    }
  },

